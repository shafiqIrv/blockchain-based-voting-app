# Backend Environment Variables

# Server
PORT=3001

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# SSO ITB (Oracle)
SSO_ITB_URL=https://login.itb.ac.id
SSO_CLIENT_ID=your-client-id
SSO_CLIENT_SECRET=your-client-secret
SSO_CALLBACK_URL=http://localhost:3001/api/auth/callback

# Hyperledger Fabric
FABRIC_CHANNEL_NAME=votingchannel
FABRIC_CHAINCODE_NAME=voting
FABRIC_MSP_ID=ITBMSP
FABRIC_WALLET_PATH=./wallet
FABRIC_CONNECTION_PROFILE=./network/connection.json

# Encryption
ELECTION_PUBLIC_KEY_PATH=./keys/election_public.pem
ELECTION_PRIVATE_KEY_PATH=./keys/election_private.pem
TOKEN_SECRET=your-token-generation-secret
